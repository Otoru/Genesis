<configuration name="event_socket.conf" description="Event Socket Configuration">
  <settings>
    <!-- Listen on all interfaces for ESL connections -->
    <param name="nat-map" value="false"/>
    <param name="listen-ip" value="0.0.0.0"/>
    <param name="listen-port" value="8021"/>
    
    <!-- Password for ESL authentication (matches Genesis examples) -->
    <param name="password" value="ClueCon"/>
    
    <!-- ACL for inbound connections (allows localhost and Docker networks) -->
    <param name="apply-inbound-acl" value="esl"/>
    
    <!-- Stop on bind error -->
    <param name="stop-on-bind-error" value="true"/>
  </settings>
</configuration>
